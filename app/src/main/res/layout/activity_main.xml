<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvringtone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ringtone"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvringtone"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:padding="10dp">

        <Button
            android:id="@+id/ohayou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="fill"
            android:text="ohayou gozaimasu"
            android:onClick="startaudio"/>

        <Button
            android:id="@+id/oneesama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="fill"
            android:text="onee sama"
            android:onClick="startaudio"/>

        <Button
            android:id="@+id/massage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="fill"
            android:onClick="startaudio"
            android:text="get a massage"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/araara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_row="1"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="fill"
            android:text="ara ara"
            android:onClick="startaudio"/>

        <Button
            android:id="@+id/uraauraa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="fill"
            android:text="uraa uraa"
            android:onClick="startaudio"/>

        <Button
            android:id="@+id/alarmsahur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_row="2"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="fill"
            android:text="alarm sahur"
            android:onClick="startaudio"/>

    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>